<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TeleHealthConversationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TeleHealthConversationApp"
    Shell.FlyoutBehavior="Flyout"
    Title="TeleHealthConversationApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Add ConversationPage -->
    <ShellContent
        Title="Conversation"
        ContentTemplate="{DataTemplate local:ConversationPage}"
        Route="ConversationPage" />

</Shell>
